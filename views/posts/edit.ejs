  }

  .post_show_title tbody {
    position: relative;
    right: 100px;
  }

  .chatbtn .btn {
    position: relative;
    right: -100px;
    bottom: 100px;
    display: inline-block;
    width: 136px;
    height: 42px;
    font-size: 16px;
    color: #fff;
    border-radius: 2px;
    background: #F6C488;
  }
</style>
<body>
  <%- include('../partials/sim2_nav') %>
    <form action="/posts/<%= post._id %>?_method=put<%= getPostQueryString(true) %>" enctype="multipart/form-data"
      method="post">
      <div class="post_show_title">

        <h2>제목 <input type="text" id="title" name="title" value="<%= post.title %>">
          <% if(errors.title){ %>
            <span class="invalid-feedback">
              <%= errors.title.message %>
            </span>
            <% } %>
        </h2>
        <table>

          <colgroup>
            <col>
          </colgroup>
          <tbody>
            <tr>
              <th>상품 사진</th>
              <td><input type="file" name="newAsttachment" class="form-control-file" id="attachment" multiple></td>
            </tr>
            <tr>
              <th>가격</th>
              <td>
                <input type="text" id="price" name="price" value="<%= post.price %>"
                  class="form-control <%= (errors.title)?'is-invalid':'' %>">
                <% if(errors.price){ %>
                  <span class="invalid-feedback">
                    <%= errors.price.message %>
                  </span>
                  <% } %>
              </td>
            </tr>
            <tr>
              <th>상품상세</th>
              <td>
                <textarea id="body" name="contents" rows="5"
                  class="form-control <%= (errors.contents)?'is-invalid':'' %>"><%= post.contents %></textarea>
                <% if(errors.contents){ %>
                  <span class="invalid-feedback">
                    <%= errors.contents.message %>
                  </span>
                  <% } %>
              </td>
            </tr>
          </tbody>
        </table>

        <div>
          <button style="
          position: relative;
          width: 120px;
          left:200px;
          top:50px;
          font-size: 16px;
          color: #fff;
          border-radius: 2px;
          background: #F6C488; border: 3px solid #787878; color: #000000;"class="chatbtn" href="/posts<%= getPostQueryString() %>">이전</button>
          <button style="
          position: relative;
          width: 120px;
          left:200px;
          top:50px;
          font-size: 16px;
          color: #fff;
          border-radius: 2px;
          background: #F6C488; border: 3px solid #787878; color: #000000;"type="submit" class="chatbtn">작성완료</button>
        </div>

      </div>
    </form>
</body>

