  .post_show_title {
    background-color: #ffffff;
    position: relative;
    padding: 50px 120px 120px 395px;
    height: auto;
    border-radius: 10px;
    border: 2px solid #787878;
  }


  .post_show_title .post_show_img>img {
    height: 350px;
    width: 350px;
    position: relative;
    bottom: 120px;
    right: 380px;
    border: 1px solid #e8e8e8;
  }

  .post_show_title>h2 {
    margin: 0 100px 15px;
    padding: 0 100px 20px;
    border-bottom: 2px solid #333;
    font-size: 24px;
    color: #232323;
    line-height: 26px;
  }

  .post_show_title table th,
  .post_show_title table td {
    padding: 20px 20px;
    font-size: 18px;
    text-align: left;
  }

  .post_show_title table th {
    min-width: 150px;
    font-size: 22px;
