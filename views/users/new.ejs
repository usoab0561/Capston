    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <%- include('../partials/head') %>
    <style>
    body{
      text-decoration: none;
      list-style: none;
      background-color:#FFDEB8;
    }
    .navbar{
      background-color:#FFDEB8;
      font-family: 'Nanum Gothic', sans-serif;
    }
    .navbar-brand > #h1{
      color: #717171;
      font-weight: 800;
    }
    .navbar-brand > #h1{
      top:0px;
    }
    .navbar-brand > #h3{
      color: #717171;
      font-weight: 800;
    }
    .collapse > .navbar-nav{
      font-family: 'Nanum Gothic', sans-serif;
      color: #717171;
      font-weight: 800;
      font-size: 20px;
    }
    .header2 > .navbar-nav{
      font-family: 'Nanum Gothic', sans-serif;
      color: #717171;
      font-weight: 800;
      font-size: 20px;
    }
    .center{
      border: 2px dashed #707070;
      background-color: #F1FBCF;
    }
 
     #container {
      text-align: center;
      }

      #next_bt {
    margin-left:auto;
      }
      #text {
      font-family: 'Nanum Gothic', sans-serif;
      font-size: 20px;
 
    }
  </style>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div id="container" class="container mb-3">
      <h3 id="title" style=" margin-top : 50px;font: HYGothic-Extra; font-weight: bold; color: #787878; font-size: 30px;" class="contentBoxTop mb-3">정보 입력<br><br></h3>

      <form action="/users" method="post" style="margin: 0 auto;">
       
        <div class="form-group row" style="margin-left: 14%;">
          <label for="username" id ="text" class="col-sm-3 col-form-label">아이디*</label>
          <div class="col-sm-9">
            <input type="text" id="username" style="width: 300px;" name="username" value="<%= user.username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
            <% if(errors.username){ %>
              <span class="invalid-feedback"><%= errors.username.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row" style="margin-left: 14%;">
          <label for="name" id ="text"  class="col-sm-3 col-form-label">이름*</label>
          <div class="col-sm-9">
            <input type="text" id="name" style="width: 300px;" name="name" value="<%= user.name %>" class="form-control <%= (errors.name)?'is-invalid':'' %>">
            <% if(errors.name){ %>
              <span class="invalid-feedback"><%= errors.name.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row" style="margin-left: 14%;">
          <label for="email" id ="text"  class="col-sm-3 col-form-label">이메일</label>
          <div class="col-sm-9">
            <input type="text" id="email" style="width: 300px;" name="email" value="<%= user.email %>" class="form-control <%= (errors.email)?'is-invalid':'' %>">
            <% if(errors.email){ %>
              <span class="invalid-feedback"><%= errors.email.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row" style="margin-left: 14%;">
          <label for="address"id ="text"   class="col-sm-3 col-form-label">주소*</label>
          <div class="col-sm-9">
            <input type="text" id="address" style="width: 300px;" name="address" value="<%= user.address %>" class="form-control <%= (errors.address)?'is-invalid':'' %>">
            <% if(errors.address){ %>
              <span class="invalid-feedback"><%= errors.address.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row" style="margin-left: 14%;">
          <label for="password" id ="text"  class="col-sm-3 col-form-label">비밀번호*</label>
          <div class="col-sm-9">
            <input type="password" id="password" style="width: 300px;" name="password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>">
            <% if(errors.password){ %>
              <span class="invalid-feedback"><%= errors.password.message %></span>
            <% } %>
          </div>
        </div>
        <div class="form-group row" style="margin-left: 14%;">
          <label for="passwordConfirmation" id ="text"  class="col-sm-3 col-form-label">비밀번호 확인*</label>
          <div class="col-sm-9 col-sm-offset-3">
            <input type="password" id="passwordConfirmation" style="width: 300px;" name="passwordConfirmation" value="" class="form-control <%= (errors.passwordConfirmation)?'is-invalid':'' %>">
            <% if(errors.passwordConfirmation){ %>
              <span class="invalid-feedback"><%= errors.passwordConfirmation.message %></span>
            <% } %>
          </div>
        </div>
        <p>
          <small id ="text"  >*필수 입력</small>
        </p>
      

        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>

        <div class="form-group mt-3"  >
          <button id="next_bt" type="submit" class="btn btn-primary" style=" font-family: 'Nanum Gothic', sans-serif; color: #000000; background: #F6C488; border: 3px solid #787878;">다음</button>
        </div>
      </form>
    </div>
  </body>
</html>